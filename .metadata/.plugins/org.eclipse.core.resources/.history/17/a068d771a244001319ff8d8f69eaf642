		<%
			if (request.getParameter("number") != null) {
				int to = Integer.parseInt(request.getParameter("to"));
				int num = Integer.parseInt(request.getParameter("number"));
				for (int i = 1; i <= to; i++) {
					out.print(num + " X " + i + " = " + num * i + "<br>");
